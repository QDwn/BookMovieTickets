<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"

    >

    <TextView
        android:id="@+id/textView8"
        android:layout_width="144dp"
        android:layout_height="52dp"
        android:layout_marginBottom="80dp"
        android:text="Sign Up"
        android:textColor="@color/white"
        android:textSize="38dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.123"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="391dp"
        android:layout_height="341dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.357"
        tools:layout_editor_absoluteX="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <EditText

                android:id="@+id/signup_fistname"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_border_red"
                android:ems="10"
                android:hint="First Name"
                android:inputType="text"
                android:paddingHorizontal="10dp"
                android:textColor="@color/white"
                android:textColorHint="#C3BDBD" />

            <Space
                android:layout_width="10dp"
                android:layout_height="10dp" />

            <EditText
                android:id="@+id/signup_lastname"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_border_red"
                android:ems="10"
                android:hint="Last Name"
                android:inputType="text"
                android:paddingHorizontal="15dp"
                android:textColor="@color/white"
                android:textColorHint="#C3BDBD" />

        </LinearLayout>


        <EditText
            android:id="@+id/signup_phone"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/edittext_border_red"
            android:ems="10"
            android:hint="Phone Number"
            android:textColor="@color/white"
            android:inputType="phone"
            android:textColorHint="#C3BDBD"
            android:paddingHorizontal="10dp"
            />


        <EditText
            android:id="@+id/signup_email"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/edittext_border_red"
            android:ems="50"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="10dp"
            android:textColor="@color/white"
            android:textColorHint="#C3BDBD"
            android:layout_marginTop="18dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/signup_pw"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/edittext_border_red"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingHorizontal="10dp"
                android:textColor="@color/white"
                android:textColorHint="#C3BDBD"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edittxtPassword2"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/edittext_border_red"
                android:ems="10"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:paddingHorizontal="10dp"
                android:textColor="@color/white"
                android:textColorHint="#C3BDBD"
                android:paddingEnd="48dp"/>

        </RelativeLayout>


        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingStart="10dp"
            android:text="I Agree with privacy and policy"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            />

    </LinearLayout>
    <Button
        android:id="@+id/signup_button"
        android:layout_width="261dp"
        android:layout_height="48dp"
        android:background="@drawable/button_border_red"
        android:text="Sign Up"
        app:backgroundTint="#810C0C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.697" />

    <LinearLayout
        android:layout_width="382dp"
        android:layout_height="45dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="5dp">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="271dp"
            android:layout_height="match_parent"
            android:text="Already have an Account?"
            android:textColor="@color/white"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Sign in"
            android:textColor="@color/red"
            android:textSize="22dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>